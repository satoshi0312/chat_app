#react-header
.edit_wrapper
  %h3.edit_user_title
    プロフィール編集
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .form_group
      = f.file_field :avatar
    .form_group.edit_form_group
      = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "#{current_user.name}", class: "form-control"
    .form_group.edit_form_group
      = f.email_field :email, placeholder: "#{current_user.email}", class: "form-control"
    .form_group.edit_form_group
      = f.password_field :current_password, placeholder: "現在のパスワード(更新する場合はこの項目は必ず入力してください)", class: "form-control"
    .form_group.edit_form_group
      = f.password_field :password, autocomplete: "new-password", placeholder: "新しいパスワード", class: "form-control"
    .form_group.edit_form_group
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワードの確認", class: "form-control"
    .actions.form_group
      = f.submit "更新", class: "btn btn-info login_btn"
  = button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete, class: "btn btn-danger user_destroy_btn"


